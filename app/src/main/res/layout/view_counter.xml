<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23" />

    <TextView
        android:id="@+id/counterName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:text="Counter Name:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/counterNameValue"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:weightSum="1">

        <TextView
            android:id="@+id/initial"
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="Initial Value: "
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/initialValue"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_weight="0.50" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/current"
            android:layout_width="196dp"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="Current Value:"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="18sp"
            android:layout_weight="0.05" />

        <EditText
            android:id="@+id/currentValue"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            android:layout_weight="0.47"
            android:fontFamily="monospace"
            android:inputType="number"
            android:textAlignment="center" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:text="Comments: "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/commentValue"
        android:layout_width="354dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Button
        android:id="@+id/saveViewCounter"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="monospace"
        android:text="Save"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelViewCounter"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="?android:attr/colorControlNormal"
            android:fontFamily="monospace"
            android:text="Cancel"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/deleteViewCounter"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_red_dark"
            android:fontFamily="monospace"
            android:text="Delete"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>